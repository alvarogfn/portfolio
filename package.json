{
  "name": "alvarogfn",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "commit": "git-cz",
    "dev": "nuxt dev",
    "format": "prettier --write .",
    "generate": "nuxt generate",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint . -c eslint.config.mjs",
    "postinstall": "nuxt prepare",
    "prepare": "husky install",
    "preview": "nuxt preview",
    "typecheck": "nuxt typecheck"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,vue}": [
      "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs",
      "prettier --write"
    ],
    "*.{json,md,svg}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@getify/eslint-plugin-proper-arrows": "^11.0.3",
    "@netlify/plugin-lighthouse": "^5.0.0",
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.1.1",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/i18n": "8.0.0-rc.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^38.0.0",
    "eslint-define-config": "^1.23.0",
    "eslint-plugin-array-func": "^3.1.8",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-regexp": "^1.15.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nuxt": "^3.7.0",
    "prettier": "3.0.2",
    "sass": "^1.66.1",
    "typescript": "5.2.2",
    "vue-eslint-parser": "^9.3.1"
  }
}
